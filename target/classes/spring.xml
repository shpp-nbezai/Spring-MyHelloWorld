<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
 		http://www.springframework.org/schema/beans
 		http://www.springframework.org/schema/beans/spring-beans-3.2.xsd">

    <bean id="client_first" class="spring.core.beans.Client">
        <constructor-arg type="java.lang.Integer" value = "1"/>
        <constructor-arg type="java.lang.String" value  = "Vasya Pupkin"/>
    </bean>

    <bean id="eventLogger" class="spring.core.loggers.ConsoleEventLoger"/>

    <bean id="eventFileLogger" class="spring.core.loggers.FileEventLogger" init-method="init">
        <constructor-arg type="java.lang.String" value="target/Spring-MyHelloWorldEvent_log.txt"/>
    </bean>

    <bean id="eventCacheFileLogger" class="spring.core.loggers.CacheFileEventLogger" destroy-method="destroy" init-method="init">
        <constructor-arg type="java.lang.String" value="target/Spring-MyHelloWorldEvent_log.txt"/>
        <constructor-arg value = "3"/>
    </bean>

    <bean id="event" class = "spring.core.beans.Event" scope="prototype">
        <constructor-arg>
            <bean class="java.util.Date"/>
        </constructor-arg>
        <constructor-arg ref="dateFormat" />
    </bean>

    <bean id="dateFormat" class="java.text.DateFormat" factory-method="getDateTimeInstance"/>

    <bean id="app" class="spring.core.App">
        <constructor-arg ref = "client_first"/>
        <constructor-arg ref = "eventCacheFileLogger"/>
    </bean>

</beans>